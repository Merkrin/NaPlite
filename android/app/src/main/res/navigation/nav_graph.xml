<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/RecipeFragmentInfo">

    <fragment
        android:id="@+id/RecipeFragmentInfo"
        android:name="com.kykers.naplite.ui.recipe_activity.RecipeFragmentInfo"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/recipe_fragment_info">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/RecipeSecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/RecipeSecondFragment"
        android:name="com.kykers.naplite.ui.recipe_activity.RecipeFragmentIngredients"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/recipe_fragment_ingredients">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/RecipeFragmentInfo" />
    </fragment>
</navigation>